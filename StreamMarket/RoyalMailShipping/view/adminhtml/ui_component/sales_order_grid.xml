<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar  name="listing_top">
        <massaction name="listing_massaction">
            <action name="ship_with_royalmail">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">ship_with_royalmail</item>
                        <item name="label" xsi:type="string" translate="true">Ship with Royal Mail</item>
                        <item name="url" xsi:type="url" path="smroyalmail/mass/ship"/>
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Ship with Royal Mail</item>
                            <item name="message" xsi:type="string" translate="true">Are you sure?</item>
                        </item>
                    </item>
                </argument>
            </action>
			<action name="print_with_royalmail">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">print_with_royalmail</item>
                        <item name="label" xsi:type="string" translate="true">Print Royal Mail Shipping Labels</item>
                        <item name="url" xsi:type="url" path="smroyalmail/massaction/bulkshipmentrm"/>
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Print Royal Mail Shipping Labels</item>
                            <item name="message" xsi:type="string" translate="true">Are you sure?</item>
                        </item>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
</listing>